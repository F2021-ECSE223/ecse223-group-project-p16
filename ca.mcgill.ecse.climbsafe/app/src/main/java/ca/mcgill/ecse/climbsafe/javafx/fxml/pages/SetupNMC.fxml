<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.climbsafe.javafx.fxml.controllers.SetupNMCController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="119.5" minWidth="10.0" prefWidth="119.5" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="101.5" minWidth="10.0" prefWidth="101.5" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.5" minWidth="10.0" prefWidth="79.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TextField fx:id="NumberOfWeeksTextField" onAction="#enterNumberOfWeeks" promptText="Number of Weeks" />
      <TextField fx:id="PriceOfGuidePerWeekTextField" layoutX="110.0" layoutY="13.0" onAction="#enterPriceOfGuide" prefHeight="25.0" prefWidth="84.0" promptText="Price of Guide" GridPane.columnIndex="1" />
