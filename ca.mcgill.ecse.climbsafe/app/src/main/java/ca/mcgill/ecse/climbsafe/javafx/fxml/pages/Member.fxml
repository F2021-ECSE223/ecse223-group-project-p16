<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.climbsafe.javafx.fxml.controllers.MemberController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Member" />
      <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="87.0" text="Select Member:" GridPane.rowIndex="1" />
      <ChoiceBox fx:id="memberChoiceBox" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="350.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" />
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteMemberClicked" prefHeight="25.0" prefWidth="138.0" text="Delete" GridPane.columnIndex="3" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />
      <Button fx:id="RegisterMemberButton" mnemonicParsing="false" onAction="#registerMember" text="Register" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    
      <TextField fx:id="UserNameTextField" onAction="#enterUserName" promptText="Username" GridPane.columnIndex="1" />
      <TextField fx:id="EmailText" onAction="#enterEmail" promptText="Email" GridPane.columnIndex="2" />
      <Button fx:id="UpdateMemberButton" mnemonicParsing="false" onAction="#updateMember" text="Update" GridPane.columnIndex="4" GridPane.rowIndex="1" />
   </children>
</GridPane>
