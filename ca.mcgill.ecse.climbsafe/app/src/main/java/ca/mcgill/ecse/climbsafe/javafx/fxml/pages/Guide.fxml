<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.climbsafe.javafx.fxml.controllers.GuideController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Guide" />
      <Button fx:id="AddGuideButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#addGuide" text="Add" GridPane.columnIndex="2" GridPane.rowIndex="3" />
      <Button fx:id="DeleteGuideButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#deleteGuide" text="Delete" GridPane.columnIndex="4" GridPane.rowIndex="3" />
      <TextField fx:id="UserNameTextField" promptText="Username" GridPane.columnIndex="1" />
      <TextField fx:id="EmergencyContactTextField" promptText="Emergency Contact" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="UpdateGuideButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#updateGuide" text="Update" GridPane.columnIndex="3" GridPane.rowIndex="3" />
      <TextField fx:id="EmailTextField" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="PasswordTextField" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   </children>
</GridPane>